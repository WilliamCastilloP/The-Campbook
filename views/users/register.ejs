<% layout('layouts/boilerplate')  %> 

<h1 class="text-center my-5"><i class="fas fa-campground"></i>Sign Up</h1>
<div class="container">
    <div class="row justify-content-center">
    <div class="col-xs-12 col-sm-10 col-md-10 col-lg-8">
        <div class="card shadow">
            <div class="card-body">
            <form action="/register" class="needs-validation" method="POST" novalidate>
                <div>
                    <label class="form-label" for="username">Username</label>
                    <input class="form-control" type="text" name="username" id="" required >
                </div>
                <div>
                    <label class="form-label" for="email">Email</label>
                    <input class="form-control" type="email" name="email" id="" required >
                </div>
                <div class="mb-3">
                    <label class='form-label' for="password">Password</label>
                    <input class='form-control' type="password" name="password" id="" required >
                </div>
                <div class="d-grid gap-2 mb-1">
                    <button class="btn btn-dark btn-block">Register</button>
                </div>
                <a class="d-grid btn btn-outline-danger btn-block" href="/campgrounds">Cancel</a>
            </form>
            </div>
        </div>
        <p  class="text-center">Already registered? Click <a href="/login">here</a> to login.</p>
    </div>
</div>